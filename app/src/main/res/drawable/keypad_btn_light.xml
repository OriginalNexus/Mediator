<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<layer-list>
			<item>
				<shape android:shape="rectangle">
					<corners android:radius="7dp"/>
					<solid android:color="@color/keypad_pressed_border_light"/>
				</shape>
			</item>
			<item android:bottom="1dp" android:left="1dp" android:right="1dp" android:top="2dp">
				<shape android:shape="rectangle">
					<corners android:radius="6dp"/>
					<gradient android:angle="270" android:endColor="@color/keypad_pressed_bottom_light" android:startColor="@color/keypad_pressed_top_light" />
				</shape>
			</item>
		</layer-list>
	</item>
	<item>
		<layer-list>
			<item>
				<shape android:shape="rectangle">
					<corners android:radius="7dp"/>
					<solid android:color="@color/keypad_border_light"/>
				</shape>
			</item>
			<item android:bottom="2dp" android:left="1dp" android:right="1dp" android:top="1dp">
				<shape android:shape="rectangle">
					<corners android:radius="6dp"/>
					<gradient android:angle="270"  android:endColor="@color/keypad_bottom_light" android:startColor="@color/keypad_top_light"/>
				</shape>
			</item>
		</layer-list>
	</item>
</selector>