<LinearLayout
	android:id="@+id/gradesCardFragContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="vertical"
	tools:context=".fragments.GradesCardFrag"
	>

	<!-- TODO: Material design tabel in cards-->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/Separator_thickness"
		android:background="#ff6d6d6d"
		android:orientation="horizontal"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="horizontal"
		android:minHeight="48dp">

		<TextView
			android:id="@+id/gradesCardFragOutput"
			style="@android:style/TextAppearance.Large"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginBottom="4dp"
			android:layout_marginTop="4dp"
			android:layout_weight="1"
			android:gravity="center"
			android:textSize="22sp"/>

		<LinearLayout
			android:layout_width="@dimen/Separator_thickness"
			android:layout_height="match_parent"
			android:layout_marginLeft="4dp"
			android:layout_marginRight="4dp"
			android:background="?attr/separator_color"
			android:orientation="horizontal"/>

		<TextView
			android:id="@+id/gradesCardFragAverage"
			style="@android:style/TextAppearance.Large"
			android:layout_width="96dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginBottom="4dp"
			android:layout_marginTop="4dp"
			android:gravity="center"
			android:textSize="30sp"/>
	</LinearLayout>

</LinearLayout>
