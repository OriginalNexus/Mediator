<resources>

	<style name="Mediator.Light" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>

		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
		<item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

		<item name="color_separator">@color/separator_light</item>
		<item name="color_grades_hint_over">@color/grades_hint_over_light</item>
		<item name="color_grades_hint_under">@color/grades_hint_under_light</item>
		<item name="color_background">@color/background_light</item>

		<item name="ic_add">@drawable/ic_add_black_24dp</item>
		<item name="ic_remove">@drawable/ic_remove_black_24dp</item>
	</style>
	
	<style name="Mediator.Dark" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>

		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
		<item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>

		<item name="color_separator">@color/separator_dark</item>
		<item name="color_grades_hint_over">@color/grades_hint_over_dark</item>
		<item name="color_grades_hint_under">@color/grades_hint_under_dark</item>
		<item name="color_background">@color/background_dark</item>

		<item name="ic_add">@drawable/ic_add_white_24dp</item>
		<item name="ic_remove">@drawable/ic_remove_white_24dp</item>
	</style>

	<style name="KeypadBtn" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">0dp</item>
		<item name="android:textSize">20sp</item>
		<item name="layout_columnWeight">1</item>
		<item name="layout_rowWeight">1</item>
	</style>


	<style name="Grades" parent="TextAppearance.AppCompat.Body1">
		<item name="android:textSize">16sp</item>
	</style>

	<style name="Grades.Over">
		<item name="android:textColor">?attr/color_grades_hint_over</item>
	</style>

	<style name="Grades.Middle" />

	<style name="Grades.Under">
		<item name="android:textColor">?attr/color_grades_hint_under</item>
	</style>


	<style name="InputField" parent="Widget.AppCompat.EditText">
		<item name="android:gravity">center</item>
	</style>


	<style name="Separator">
		<item name="android:background">?attr/color_separator</item>
	</style>

	<style name="Separator.Vertical">
		<item name="android:layout_width">@dimen/separator_size</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<style name="Separator.Horizontal">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/separator_size</item>
	</style>

</resources>
